<?php
    /*
        Sama halnya dengan bahasa pemrograman lainnya. PHP juga memiliki berbagai operator Aritmatika
        yang dapat digunakan dalam komputasi program.
    */
    $a = 20;
    $b = 20;

    $result = a + b; // Operator Aritmatika penjumlahan
    var_dump($result);
    
    $resultNegative = -$result; // Operator aritmatika untuk mengubah nilai menjadi negative.
    var_dump($resultNegative);
    
    $resultPositive = +$result; // Operator aritmatika untuk mengubah nilai menjadi Positive.
    var_dump($resultPositive);
?>
